{
  "name": "@pkg-name/monorepo",
  "version": "0.0.1-beta.1",
  "private": true,
  "packageManager": "pnpm@7.28.0",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "nr volar:helper && nr stub",
    "docs": "npm -C docs run dev",
    "docs:build": "npm -C docs run build",
    "stub": "pnpm -r --parallel --filter=./packages/* run dev",
    "build": "rimraf packages/*/{dist,es,lib} && nr -r -F \"./packages/{preset,utils,components}\" build && nr volar:helper",
    "play": "npm -C playground run dev",
    "play:build": "npm -C playground run build",
    "example": "npm -C example run dev",
    "lint": "eslint --cache .",
    "lint:fix": "nr lint --fix",
    "release": "bumpp package.json packages/**/package.json",
    "deploy": "nr build && nr play:build && nr docs:build",
    "test": "vitest",
    "test:update": "vitest -u",
    "test:coverage": "vitest --coverage",
    "volar:helper": "esno scripts/volar-helper",
    "update:deps": "taze -w && pnpm i",
    "type:check": "tsc --noEmit",
    "cz": "czg",
    "commit": "git pull && git add -A && pnpm cz && git push",
    "postinstall": "npx simple-git-hooks"
  },
  "dependencies": {
    "pkg-name": "workspace:*"
  },
  "devDependencies": {
    "@antfu/ni": "^0.21.4",
    "@eiog/eslint-config": "^0.0.2",
    "@eiog/ts-config": "^0.0.3",
    "@pkg-name/components": "workspace:*",
    "@pkg-name/preset": "workspace:*",
    "@pkg-name/utils": "workspace:*",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.3.1",
    "@unocss/reset": "^0.53.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/ui": "^0.32.0",
    "@vue/test-utils": "^2.3.2",
    "@vueuse/core": "^10.1.2",
    "commitlint": "^17.6.5",
    "cz-git": "^1.6.1",
    "czg": "^1.6.1",
    "eslint": "^8.42.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.1",
    "jsdom": "^22.1.0",
    "less": "^4.1.3",
    "lint-staged": "^13.2.2",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.8.1",
    "taze": "^0.10.2",
    "tsup": "^6.7.0",
    "typescript": "^5.1.3",
    "unocss": "^0.53.1",
    "unplugin-auto-import": "^0.16.4",
    "unplugin-vue-components": "^0.25.1",
    "vite": "^4.3.9",
    "vite-plugin-dts": "^2.3.0",
    "vitepress": "1.0.0-beta.2",
    "vitest": "^0.32.0",
    "vue": "^3.3.4",
    "vue-tsc": "^1.6.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged && pnpm type:check"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm lint:fix"
    ]
  }
}
