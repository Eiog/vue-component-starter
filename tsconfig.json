{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@eiog/ts-config/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "pkg-name": [
        "./packages/pkg-name/src/index.ts"
      ],
      "@pkg-name/components": [
        "./packages/components/index.ts"
      ],
      "@pkg-name/utils": [
        "./packages/utils/src/index.ts"
      ],
      "@pkg-name/preset": [
        "./packages/preset/src/index.ts"
      ]
    },
    "types": [
      "node",
      "vite/client"
    ]
  },
  "exclude": [
    "**/dist/**",
    "**/node_modules/**",
    "**/test/dts/**",
    "**/playground/**",
    "**/example/**",
    "**/packages/components/**"
  ]
}
